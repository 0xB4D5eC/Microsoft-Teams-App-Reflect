{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AppServicePlan": {
      "defaultValue": "[resourceGroup().name]",
      "minLength": 1,
      "type": "String"
    },
    "botServicesname": {
      "defaultValue": "[resourceGroup().name]",
      "type": "String"
    },
    "StorageAccountName": {
      "defaultValue": "[resourceGroup().name]",
      "type": "String"
    },
    "WebAppService": {
      "defaultValue": "[resourceGroup().name]",
      "type": "String"
    },
    "BotID": {
      "defaultValue": "",
      "type": "String",
      "metadata": {
        "description": "The client ID of the bot Azure AD app, e.g., 123e4567-e89b-12d3-a456-426655440000."
      }
    },
    "botClientSecret": {
      "type": "SecureString",
      "metadata": {
        "description": "The client secret of the bot Azure AD app."
      }
    },
    "AppInsights": {
      "defaultValue": "reflectappinsights",
      "type": "String"
    },
    "AppInsightsComponents": {
      "defaultValue": "reflectappinsights",
      "type": "String"
    },
    "gitRepoUrl": {
      "defaultValue": "https://github.com/OfficeDev/Microsoft-Teams-App-Reflect.git",
      "type": "String",
      "metadata": {
        "description": "The URL to the GitHub repository to deploy."
      }
    },
    "gitBranch": {
      "defaultValue": "main",
      "type": "String",
      "metadata": {
        "description": "The branch of the GitHub repository to deploy."
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('AppServicePlan')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2014-06-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "ARMAppserviceplan"
      },
      "properties": {
        "name": "[parameters('AppServicePlan')]",
        "numberOfWorkers": 1
      }
    },
    {
      "name": "[parameters('StorageAccountName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "tags": {
        "displayName": "ARMReflectStorage"
      },
      "properties": {
        "accountType": "Standard_LRS"
      }
    },

    {
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2019-03-01",
      "name": "[parameters('AppInsights')]",
      "location": "global",
      "properties": {
        "groupShortName": "SmartDetect",
        "enabled": true,
        "emailReceivers": [],
        "smsReceivers": [],
        "webhookReceivers": [],
        "itsmReceivers": [],
        "azureAppPushReceivers": [],
        "automationRunbookReceivers": [],
        "voiceReceivers": [],
        "logicAppReceivers": [],
        "azureFunctionReceivers": []
      }
    },
    {
      "type": "microsoft.insights/components",
      "apiVersion": "2018-05-01-preview",
      "name": "[parameters('AppInsightsComponents')]",
      "location": "[resourceGroup().location]",
      "tags": {
        "hidden-link:/subscriptions/subscription().id/resourceGroups/resourceGroup().name/providers/Microsoft.BotService/botServices/[parameters('botServicesname')]": "Resource",
        "hidden-link:/subscriptions/subscription().id/resourceGroups/resourceGroup().name/providers/Microsoft.Web/sites/[parameters('WebAppService')]": "Resource"
      },
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "RetentionInDays": 90,
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      }
    },
    {
      "type": "Microsoft.BotService/botServices",
      "apiVersion": "2018-07-12",
      "name": "[parameters('botServicesname')]",
      "location": "global",
      "sku": {
        "name": "F0"
      },
      "kind": "sdk",
      "properties": {
        "displayName": "Reflect",
        "iconUrl": "[concat('//bot-framework.azureedge.net/bot-icons-v1/', parameters('botServicesname'), '_27F2GKC8M3FF9qdGhG3yIG6e4VCF42SiBi8DO3Aj7BwUCqx.png')]",
        "msaAppId": "[parameters('BotID')]",
        "luisAppIds": [],
        "endpoint": "[concat('https://',parameters('WebAppService'),'.azurewebsites.net/api/messages')]",
        "developerAppInsightKey": "[reference(concat('microsoft.insights/components/', parameters('AppInsights'))).InstrumentationKey]",
        "appSettings": [
          {
            "name": "MicrosoftAppPassword",
            "value": "[parameters('botClientSecret')]"
          }
        ],
        "dependsOn": [
          "[resourceId('microsoft.insights/components', parameters('AppInsights'))]"
        ]
      }
    },
    {
      "name": "[parameters('WebAppService')]",
      "type": "Microsoft.Web/sites",
      "apiVersion": "2015-08-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', parameters('AppServicePlan'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceGroup().id, '/providers/Microsoft.Web/serverfarms/', parameters('AppServicePlan'))]": "Resource",
        "displayName": "ReflectARM"
      },
      "properties": {
        "name": "[parameters('WebAppService')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms/', parameters('AppServicePlan'))]"
      },
      "resources": [
        {
          "type": "sourcecontrols",
          "apiVersion": "2016-08-01",
          "name": "web",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('AppServicePlan'))]"
          ],
          "properties": {
            "RepoUrl": "[parameters('gitRepoUrl')]",
            "branch": "[parameters('gitBranch')]",
            "IsManualIntegration": true
          },
          "condition": "[not(empty(parameters('gitRepoUrl')))]"
        },
        {
          "type": "config",
          "apiVersion": "2019-08-01",
          "name": "appsettings",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('WebAppService'))]",
            "[resourceId('Microsoft.Insights/components', parameters('AppInsightsComponents'))]"
          ],
          "properties": {
            "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(resourceId('Microsoft.Insights/components', parameters('AppInsights')), '2018-05-01-preview').InstrumentationKey]",
            "webSiteName": "[parameters('WebAppService')]",
            "storageAccountName": "[parameters('StorageAccountName')]",
            "StorageAccountConnectionString": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2019-06-01').keys[0].value)]",
            "appInsightsName": "[parameters('AppInsights')]",
            "ReflectionPartitionKey": "ReflectionDataEntity",
            "RecurssionPartitionKey": "RecurssionData",
            "QuestionPartitionKey": "QuestionsData",
            "ResourceGroupName": "[resourceGroup().name]",
            "SubscriptionId": "[subscription().subscriptionId]",
            "MicrosoftAppId": "[parameters('BotID')]",
            "MicrosoftAppPassword": "[parameters('botClientSecret')]",
            "BaseUri": "[concat('https://',parameters('WebAppService'),'.azurewebsites.net')]"
          }
        }
      ]
    }
  ]
}